{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": [
      {
        "collectionGroup": "projects",
        "queryScope": "COLLECTION",
        "fields": [
          {
            "fieldPath": "author",
            "order": "ASCENDING"
          },
          {
            "fieldPath": "createdAt",
            "order": "DESCENDING"
          }
        ]
      }
    ],
    "fieldOverrides": []
  }
}
